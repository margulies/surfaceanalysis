{
    "tool-version": "dev",
    "name": "surfaceanalysis",
    "command-line": "python /opt/surfaceanalysis.py [subject] [freesurferpath] [licensekey] [seedmasks] [bidspath] [outdir]",
    "inputs": [

        {
            "value-key": "[subject]",
            "optional": false,
            "type": "String",
            "id": "subject_id",
            "name": "Subject name or something more correct"
        },
        {
            "value-key": "[freesurferpath]",
            "optional": false,
            "type": "String",
            "id": "freesurfer_path",
            "name": "Path to bids directory"
        },
        {
            "value-key": "[licensekey]",
            "optional": false,
            "type": "File",
            "id": "license_key",
            "name": "Freesurfer license key"
        },
        {
            "value-key": "[seedmasks]",
            "optional": false,
            "type": "String",
            "id": "seed_masks",
            "name": "Seed regions for distance analysis"
        },
        {
            "value-key": "[bidspath]",
            "optional": false,
            "type": "String",
            "id": "bids_path",
            "name": "Path to bids directory"
        },
        {
            "value-key": "[outdir]",
            "optional": false,
            "type": "String",
            "id": "out_dir",
            "name": "Path to output directory"
        }
    ],
    "container-image": {
        "index": "index.docker.io",
        "image": "margulies/surfaceanalysis:dev",
        "type": "docker"
    },
    "schema-version": "0.5",
    "groups": [],
    "output-files": [
        {
            "path-template": "[bidspath]/derivatives/surfaceanalysis/[subject].lh.[seedmasks].tsv",
            "optional": true,
            "id": "subject_surface",
            "path-template-stripped-extensions": [
                ".nii.gz",
                ".nii"
            ],
            "name": "Distance maps in tsv format"
        }
    ],
    "suggested-resources": {
        "walltime-estimate": 3600
    },
    "description": "Surface analysis"
}
